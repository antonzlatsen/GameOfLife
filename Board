        botLeft24Layout.setVerticalGroup(botLeft24Layout.createParallelGroup(GroupLayout.Alignment.LEADING).addGap(0, 50, 32767));
       // this.getContentPane().add(this.botLeft24, new AbsoluteConstraints(20, 400, 54, 54));
